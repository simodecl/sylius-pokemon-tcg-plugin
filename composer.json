{
    "name": "simodecl/sylius-pokemon-tcg-plugin",
    "type": "sylius-plugin",
    "description": "Sylius plugin for managing Pokemon Trading Card Game catalog using the TCGdex API",
    "license": "MIT",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "pokemon",
        "tcg",
        "trading-cards",
        "tcgdex"
    ],
    "require": {
        "php": "^8.1",
        "sylius/sylius": "^1.12 || ^2.0",
        "tcgdex/sdk": "^2.0",
        "symfony/cache": "^5.4 || ^6.0 || ^7.0",
        "nyholm/psr7": "^1.5",
        "kriswallsmith/buzz": "^1.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5 || ^10.0",
        "symplify/easy-coding-standard": "^11.0 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "SimoDecl\\SyliusPokemonTcgPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\SimoDecl\\SyliusPokemonTcgPlugin\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
