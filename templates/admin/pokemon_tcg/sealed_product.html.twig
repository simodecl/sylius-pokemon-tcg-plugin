{% extends '@SyliusAdmin/shared/layout/base.html.twig' %}

{% block title %}Pokemon TCG - Add Sealed Product{% endblock %}

{% block content %}
<div class="container-fluid py-3">
    <h1 class="mb-1">Add Sealed Product</h1>
    <p class="text-muted">Create a sealed Pokemon TCG product (booster boxes, packs, tins, etc.)</p>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'e.g., Obsidian Flames Booster Box'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.type) }}
                </div>

                <div class="col-md-6">
                    {{ form_label(form.set_id, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.set_id, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.set_id) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.price, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.price) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <button type="submit" class="btn btn-primary">Create Sealed Product</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
